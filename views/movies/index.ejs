<%- include('../partials/header') %>
<div class="movie-holder">
<% movies.forEach(function(movie){%>
    <div class="movie">
        <div id="poster" style="background-image:url(<%= movie.info.Poster%>)"></div>
        <div id="title" <%- movie.info.Title.length > 30  ? 'class="bigtext"' : '' %>>
            <div><%= movie.info.Title%></div>
        </div>
        <div id="director">
            <div class="small">Director</div>
            <div class="big"><%= movie.info.Director%></div>
        </div>
        <div id="year">
            <div class="small">Release Year</div>
            <div class="big"><%= movie.info.Year%></div>
        </div>
        <div id="description">
            <div class="small">Description</div>
            <div class="biginfo"><%= movie.info.Plot%></div>
        </div>
        <div id="links">
            <a href="/movies/<%=movie._id%>/seen">SEEN</a>
            <a href="/movies/<%=movie._id%>">DETAILS</a>
            <form action="/movies/<%= movie._id %>?_method=DELETE" method="POST"><button id="button" type="submit">DELETE</button>
            </form>
        </div>
    </div>
<%})%>
</div>
<%- include('../partials/footer') %>