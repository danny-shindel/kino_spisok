<%- include('../partials/header') %>
<div class="movie-holder">
    <% movies.forEach(function(movie){%>
        <div id="searchMovie" class="movie" >
            <div id="poster" style="background-image:url(<%= movie.Poster%>)"></div>
            <div id="title" <%- movie.Title.length> 50 ? 'class="longtext"' : '' %>>
                <div><%= movie.Title%></div>
            </div>
            <div id="director">
                <div class="small">Director</div>
                <div <%- movie.Director.length> 25 ? 'class="longdirect"' : 'class="big"' %>><%= movie.Director%></div>
            </div>
            <div id="year">
                <div class="small">Release Year</div>
                <div class="big"><%= movie.Year%></div>
            </div>
            <div id="description">
                <div class="small">Description</div>
                <div class="info"><%= movie.Plot%></div>
            </div>
            <div class="links">
                <a id="imdb" target="_blank" href="https://www.imdb.com/title/<%= movie.imdbID%>/">IMDB</a>
                <form action="/movies/create" method="POST">
                    <button id="addbutton" value="<%= movie.imdbID%>" name="imdb" type="submit">ADD MOVIE</button>
                </form>
            </div>
        </div>
    <%})%>
</div>
<%- include('../partials/footer') %>
